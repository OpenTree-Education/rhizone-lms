{
  "name": "@rhizone-lms/webapp",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^18.14.0",
    "yarn": "^1.22.19"
  },
  "scripts": {
    "build": "react-scripts build",
    "develop": "BROWSER=none REACT_APP_API_ORIGIN=http://api.rhi.zone-development react-scripts start",
    "eslint:check": "eslint 'src/**/*.{ts,tsx}'",
    "eslint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
    "delint": "yarn eslint:fix; yarn prettier:write",
    "prettier:check": "prettier --check 'src/**/*.{ts,tsx,css}'",
    "prettier:write": "prettier --write 'src/**/*.{ts,tsx,css}'",
    "test": "TZ=UTC react-scripts test"
  },
  "dependencies": {
    "@babel/core": "^7.21.0",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/icons-material": "^5.11.11",
    "@mui/lab": "^5.0.0-alpha.121",
    "@mui/material": "^5.11.11",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/luxon": "^3.2.0",
    "@types/node": "^18.14.6",
    "@types/react": "^18.0.28",
    "@types/react-big-calendar": "^1.6.1",
    "@types/react-dom": "^18.0.11",
    "luxon": "^3.3.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-big-calendar": "^1.6.8",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.2",
    "react-scripts": "5.0.1",
    "socket.io-client": "^4.6.1",
    "typescript": "^4.9.5",
    "web-vitals": "^3.1.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "prefer-destructuring": "error",
      "camelcase": [
        "error",
        {
          "ignoreDestructuring": true,
          "properties": "never"
        }
      ],
      "linebreak-style": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true
  }
}
