{
  "name": "webapp",
  "version": "0",
  "description": "Browser client app for Rhizone LMS",
  "author": "OpenTree Education Inc.",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "develop": "BROWSER=none REACT_APP_API_ORIGIN=http://api.rhi.zone-development react-scripts start",
    "eslint:check": "eslint 'src/**/*.{ts,tsx}'",
    "eslint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
    "delint": "yarn eslint:fix; yarn prettier:write",
    "prettier:check": "prettier --check 'src/**/*.{ts,tsx,css}'",
    "prettier:write": "prettier --write 'src/**/*.{ts,tsx,css}'",
    "test": "TZ=UTC react-scripts test"
  },
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.2.1",
    "@mui/lab": "^5.0.0-alpha.63",
    "@mui/material": "^5.0.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.1.0",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "prefer-destructuring": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true
  }
}
